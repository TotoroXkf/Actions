<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.we.formylove.viewmodel.MainViewModel" />

        <variable
            name="index"
            type="int" />

        <import type="android.graphics.Color" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.MainPageFragment">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backgroundCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="@id/backgroundCardView"
            app:layout_constraintLeft_toLeftOf="@id/backgroundCardView"
            app:layout_constraintRight_toRightOf="@id/backgroundCardView"
            app:layout_constraintTop_toTopOf="@id/backgroundCardView"
            app:layout_constraintVertical_bias="0.3"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:elevation="2dp"
            android:text="@{viewModel.mainPageList.get(index).title}"
            android:textColor="#111111"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/imageView"
            app:layout_constraintRight_toRightOf="@id/imageView"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            tools:text="爽宝的制作" />

        <TextView
            android:id="@+id/descView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:elevation="2dp"
            android:text="@{viewModel.mainPageList.get(index).desc}"
            android:textColor="#111111"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/titleView"
            app:layout_constraintRight_toRightOf="@id/titleView"
            app:layout_constraintTop_toBottomOf="@id/titleView"
            tools:text="爽宝的精美制作都在这里啦" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@{Color.parseColor(viewModel.color)}"
            android:text="@{viewModel.mainPageList.get(index).buttonText}"
            android:textColor="@android:color/white"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@id/backgroundCardView"
            app:layout_constraintLeft_toLeftOf="@id/backgroundCardView"
            app:layout_constraintRight_toRightOf="@id/backgroundCardView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>