<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    app:cardForegroundColor="@android:color/transparent"
    android:layout_marginTop="16dp"
    app:cardBackgroundColor="#F7F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随访对话"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2019年7月4日15:37"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="患者：医生，孩子遮盖后觉得看不清，不喜欢遮盖怎么办？"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2019年8月16日16:00"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="医生：是正常现象，需要家长监督和鼓励，可以鼓励孩子遮盖后做一些精细的游戏，如串珠子、画图、挑豆子、拼拼图、拼乐高玩具，看绘本等，如果遮盖好，可以适当看一些动画片在手机上玩一些益智小游戏，对患者均有好处，没有坏处。"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>